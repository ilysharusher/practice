{
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.1"
  },
  "scripts": {
    "build:css": "postcss ./src/css/input.css -o ./dist/css/output.css",
    "build:tailwind": "tailwindcss build ./src/css/input.css -o ./dist/css/output.css",
    "watch:tailwind": "tailwindcss -i ./src/css/input.css -o ./dist/css/output.css -w",
    "build": "npm run build:tailwind",
    "dev": "npm run watch:tailwind"
  }
}
